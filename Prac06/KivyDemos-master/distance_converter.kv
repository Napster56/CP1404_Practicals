BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

#    Button:
#       text: 'Convert miles to km'
        # the following line specifies the function in the app class to call when the button is pressed
#       on_press: app.handle_convert(input_number.text)

    Label:
        id: output_label
        font_size: 48
        color: (255,255,0,1)
